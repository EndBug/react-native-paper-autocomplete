{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "outDir": "lib"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
